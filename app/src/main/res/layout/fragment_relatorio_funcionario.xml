<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pagina3">

    <TextView
        android:id="@+id/tvFuncionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Lista de funcionários"
        android:textColor="#2D5797"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
        tools:ignore="MissingConstraints" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFuncionario"
        app:strokeColor="#2D5797"
        android:id="@+id/materialCardView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageButton
                android:id="@+id/IbFuncionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trabalhadorlista"
                app:layout_constraintStart_toStartOf="@+id/materialCardView"/>
            <TextView
                android:id="@+id/tvNomeFuncionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funcionário 1"
                app:layout_constraintStart_toEndOf="@+id/IbFuncionario"
                android:textStyle="bold"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/tvHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00h-16:00h"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvNomeFuncionario"
                app:layout_constraintStart_toEndOf="@id/IbFuncionario"
                android:textStyle="italic"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        app:strokeColor="#2D5797"
        android:id="@+id/materialCardView2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageButton
                android:id="@+id/IbFuncionario2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trabalhadorlista"
                app:layout_constraintStart_toStartOf="@+id/materialCardView2"/>
            <TextView
                android:id="@+id/tvNomeFuncionario2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funcionário 2"
                app:layout_constraintStart_toEndOf="@+id/IbFuncionario2"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tvHorario2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00h-18:00h"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvNomeFuncionario2"
                app:layout_constraintStart_toEndOf="@id/IbFuncionario2"
                android:textStyle="italic"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView2"
        app:strokeColor="#2D5797"
        android:id="@+id/materialCardView3">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageButton
                android:id="@+id/IbFuncionario3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trabalhadorlista"
                app:layout_constraintStart_toStartOf="@+id/materialCardView3"/>
            <TextView
                android:id="@+id/tvNomeFuncionario3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funcionário 3"
                app:layout_constraintStart_toEndOf="@+id/IbFuncionario3"
                android:textStyle="bold"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/tvHorario3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00h-17:00h"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvNomeFuncionario3"
                app:layout_constraintStart_toEndOf="@id/IbFuncionario3"
                android:textStyle="italic"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3"
        app:strokeColor="#2D5797">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/IbFuncionario4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trabalhadorlista"
                app:layout_constraintStart_toStartOf="@+id/materialCardView4" />

            <TextView
                android:id="@+id/tvNomeFuncionario4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funcionário 4"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/IbFuncionario4"

                />

            <TextView
                android:id="@+id/tvHorario4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00h-19:00h"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@id/IbFuncionario4"
                app:layout_constraintTop_toBottomOf="@+id/tvNomeFuncionario4"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D5797"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D5797"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>